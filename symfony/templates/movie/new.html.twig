{% extends 'base.html.twig' %}

{% block title %}New movie{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>New movie</h1>

        {{ form_start(form) }}
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ form_label(form.title) }}</label>
            <div class="col-sm-10">{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}</div>
            <small class="text-danger">{{ form_errors(form.title) }}</small>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ form_label(form.synopsis) }}</label>
            <div class="col-sm-10">{{ form_widget(form.synopsis, {'attr': {'class': 'form-control'}}) }}</div>
            <small class="text-danger">{{ form_errors(form.synopsis) }}</small>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ form_label(form.franchise) }}</label>
            <div class="col-sm-10">{{ form_widget(form.franchise, {'attr': {'class': 'form-select'}}) }}</div>
            <small class="text-danger">{{ form_errors(form.franchise) }}</small>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ form_label(form.categories) }}</label>
            <div class="col-sm-10">{{ form_widget(form.categories, {'attr': {'class': 'form-select'}}) }}</div>
            <small class="text-danger">{{ form_errors(form.categories) }}</small>
        </div>
        <div class="row mb-3">
            <div class="col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
